<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#3C1053FF"
    android:orientation="vertical" >
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/text_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="40sp"
            app:fontFamily="cursive" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:paddingLeft="45dp"
            android:layout_height="wrap_content"
            android:text="Aunt Daisys Restaurent"
            android:textSize="25sp"/>
        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:paddingLeft="30dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/img1"/>
        <View
            android:layout_width="wrap_content"
            android:layout_margin="10dp"
            android:background="#f498ad"
            android:layout_height="3dp"></View>

        <Space
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="120dp"
            android:text="Nandos"
            android:textSize="25sp"/>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            app:srcCompat="@drawable/img2"/>
        <View
            android:layout_width="wrap_content"
            android:layout_margin="10dp"
            android:background="#f498ad"
            android:layout_height="3dp"></View>

        <Space
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="120dp"
            android:text="Wendys"
            android:textSize="25sp"/>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:paddingLeft="50dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/img3"/>
        <View
            android:layout_width="wrap_content"
            android:layout_margin="10dp"
            android:background="#f498ad"
            android:layout_height="3dp"></View>


        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Roy Rodgers"
            android:paddingLeft="100dp"
            android:textSize="25sp"/>

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:paddingLeft="30dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/img4"/>
        <View
            android:layout_width="wrap_content"
            android:layout_margin="10dp"
            android:background="#f498ad"
            android:layout_height="3dp"></View>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All American Food"
            android:paddingLeft="60dp"
            android:textSize="25sp"/>

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:paddingLeft="30dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/img5"/>
        <View
            android:layout_width="wrap_content"
            android:layout_margin="10dp"
            android:background="#f498ad"
            android:layout_height="3dp"></View>
        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Taco bell"
            android:paddingLeft="110dp"
            android:textSize="25sp"/>

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:paddingLeft="60dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/img6"/>
        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp" />






    </LinearLayout>
    </ScrollView>
</LinearLayout>